<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/list', user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Option</th>
            <th calspan="3"></th>
          </tr>
          <tbody>
            <%= @books.each do |book| %>
            <tr>
              <td>
                <%= link_to  user_path(user.id) do %>
                <%= image_tag @user.get_profile_image,  class: 'attachment user profile_image fallback' %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
              <% end %>
            </tr>
          </tbody>
        </thead>
      </table>
    </div>

  </div>
</div>
