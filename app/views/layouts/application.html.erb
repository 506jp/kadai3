<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", "/", class:"navbar-brand" %>
          <button class="navbar-toggler", type="button" data-toggle="callaspe" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="callaspe navbar-callaspe" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to user_path(current_user.id), class:"nav-link text-light" do %>
                <i class="fas fa-home"></i> Home
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to " Users", users_path, class:"nav-link text-light fas fa-users" %>
              </li>
              <li class="nav-item">
                <%= link_to " Books", books_path, class:"fas fa-book-open nav-link text-light" %>
              </li>
              <li class="nav-item">
                <%= link_to " Log out", destroy_user_session_path, method: :delete, class:"fas fa-sign-out-alt nav-link text-light" %>
              </li>
              <% else %>
              <li class="nav-item">
                <%= link_to " Home", class:"fas fa-home nav-link text-light" %>
              </li>
              <li class="nav-item">
                <%= link_to " About", about_path, class:"fas fa-link nav-link text-light" %>
              </li>
              <li class="nav-item">
                <%= link_to " Sign up", new_user_registration_path, class:"fas fa-user-plus nav-link text-light" %>
              </li>
              <li class="nav-item">
                <%= link_to " Log in", new_user_session_path, class:"fas fa-sign-in-alt nav-link text-light" %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <p id="notice"></p>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
