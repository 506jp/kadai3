
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag user.get_profile_image(63, 63), class: 'attachment user profile_image fallback' %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
         
        </tbody>
      </table>
      <div class="row">
        <%= link_to user_path(current_user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
      </div>
      <h2 class="mt-3">New Book</h2>
      <%= form_with model: book, local:true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label><br>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <label for="book_body">Option</label><br>
        <%= f.text_field :body %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book' %>
      </div>
      <% end %>
    </div>
