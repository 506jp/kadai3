<div class="container px-5 px-sm-0">
  <div class="row">
<%= render 'list', book: @book %>

<div class="col-md-8 offset-md-8">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>Title</th>
        <th>Option</th>
        <th colspan="3"></th>
      </tr>
    </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(user.id) do %>
            <%= image_tag book.user.get_profile_image, class="attachment user profile-image fallback" %>
            <% end %>
          </td>
          <td>
            <%= link_to book.title, book_path(book.id) %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      </tbody>
  </table>
</div>

  </div>
</div>